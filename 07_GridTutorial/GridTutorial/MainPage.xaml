<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GridTutorial.MainPage">
    <Grid
        BackgroundColor="Brown"
        Margin="20,35,20,20">

        <!-- Label共通のスタイル -->
        <Grid.Resources>
            <Style
                TargetType="Label">
                <Setter
                    Property="Margin"
                    Value="2" />
                <Setter
                    Property="BackgroundColor"
                    Value="AliceBlue" />
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="0.5*" />
            <ColumnDefinition
                Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="50" />
            <RowDefinition
                Height="50" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="Column 0, Row 0" />
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Text="Column 1, Row 0" />
        <Label
            Grid.Column="0"
            Grid.Row="1"
            Text="Column 0, Row 1" />
        <Label
            Grid.Column="1"
            Grid.Row="1"
            Text="Column 1, Row 1" />
    </Grid>
</ContentPage>